    return 0;
}


//AddNode 
struct studentNode* AddNode(struct studentNode **start,
                             char name[], int age, char sex, float gpa)
{
    struct studentNode *newNode, *walk;

    newNode = (struct studentNode*)malloc(sizeof(struct studentNode));

    strcpy(newNode->name, name);
    newNode->age = age;
    newNode->sex = sex;
    newNode->gpa = gpa;
    newNode->next = NULL;
    newNode->back = NULL;

    if(*start == NULL){
        *start = newNode;
    }
    else{
        walk = *start;
        while(walk->next != NULL)
            walk = walk->next;

        walk->next = newNode;
        newNode->back = walk;
    }

    return newNode;
}


//Insert
void InsNode(struct studentNode *now,
             char name[], int age, char sex, float gpa)
{
    struct studentNode *newNode;

    newNode = (struct studentNode*)malloc(sizeof(struct studentNode));

    strcpy(newNode->name, name);
    newNode->age = age;
    newNode->sex = sex;
    newNode->gpa = gpa;

    newNode->next = now;
    newNode->back = now->back;

    if(now->back != NULL)
        now->back->next = newNode;

    now->back = newNode;
}


//GoBack
void GoBack(struct studentNode **now)
{
    if((*now)->back != NULL)
        *now = (*now)->back;
}

//delete Node
struct studentNode* DelNode(struct studentNode *now)
{
    struct studentNode *temp;

    if(now == NULL)
        return NULL;

    if(now->back != NULL)
        now->back->next = now->next;

    if(now->next != NULL)
        now->next->back = now->back;

    temp = now->next;
    free(now);

    return temp;
}


