#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct studentNode {
    char name[20];
    int age;
    char sex;
    float gpa;
    struct studentNode *next;
    struct studentNode *back;
};

void show(struct studentNode *p);
struct studentNode* add(struct studentNode **head, char *name, int age, char sex, float gpa);
void insert(struct studentNode *cur, char *name, int age, char sex, float gpa, struct studentNode **head);
void back(struct studentNode **cur);
void del(struct studentNode **cur, struct studentNode **head);

int main() {

    struct studentNode *head = NULL;
    struct studentNode *cur = NULL;

    cur = add(&head, "one", 6, 'M', 3.11);
    show(head);

    cur = add(&head, "two", 8, 'F', 3.22);
    show(head);

    insert(cur, "three", 10, 'M', 3.33, &head);
    show(head);

    insert(cur, "four", 12, 'F', 3.44, &head);
    show(head);

    back(&cur);

    del(&cur, &head);
    show(head);

    del(&cur, &head);
    show(head);

    del(&cur, &head);
    show(head);

    return 0;
}

void show(struct studentNode *p) {
    while (p != NULL) {
        printf("%s ", p->name);
        p = p->next;
    }
    printf("\n");
}

struct studentNode* add(struct studentNode **head, char *name, int age, char sex, float gpa) {

    struct studentNode *n = malloc(sizeof(struct studentNode));

    strcpy(n->name, name);
    n->age = age;
    n->sex = sex;
    n->gpa = gpa;
    n->next = NULL;
    n->back = NULL;

    if (*head == NULL) {
        *head = n;
    } else {
        struct studentNode *t = *head;
        while (t->next != NULL)
            t = t->next;

        t->next = n;
        n->back = t;
    }

    return n;
}

void insert(struct studentNode *cur, char *name, int age, char sex, float gpa, struct studentNode **head) {

    struct studentNode *n = malloc(sizeof(struct studentNode));

    strcpy(n->name, name);
    n->age = age;
    n->sex = sex;
    n->gpa = gpa;

    n->next = cur;
    n->back = cur->back;

    if (cur->back != NULL)
        cur->back->next = n;
    else
        *head = n;

    cur->back = n;
}

void back(struct studentNode **cur) {
    if (*cur != NULL && (*cur)->back != NULL)
        *cur = (*cur)->back;
}

void del(struct studentNode **cur, struct studentNode **head) {

    if (*cur == NULL)
        return;

    struct studentNode *temp;

    if ((*cur)->back != NULL)
        (*cur)->back->next = (*cur)->next;
    else
        *head = (*cur)->next;

    if ((*cur)->next != NULL) {
        (*cur)->next->back = (*cur)->back;
        temp = (*cur)->next;
    } else {
        temp = (*cur)->back;
    }

    free(*cur);
    *cur = temp;
}

