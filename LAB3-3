#include <stdio.h>

struct student {
    char name[20];
    int age;
    char sex;
    float gpa;
};

struct student upgrade(struct student child);

int main() {
    struct student aboy;

    if (scanf("%s %d %c %f", aboy.name, &aboy.age, &aboy.sex, &aboy.gpa) == 4) {
        aboy = upgrade(aboy);

        printf("Name: %s\n", aboy.name);
        printf("Age: %d\n", aboy.age);
        printf("Sex: %c\n", aboy.sex);
        printf("%.2f", aboy.gpa);
    }

    return 0;
}

struct student upgrade(struct student child) {
    float bonus = 1.0f;

    if (child.sex == 'M' || child.sex == 'm') {
        bonus = 1.10f;
    } else if (child.sex == 'F' || child.sex == 'f') {
        bonus = 1.20f;
    }

    child.gpa *= bonus;

    if (child.gpa > 4.00) {
        child.gpa = 4.00;
    }

    return child;
}
---------------------------------------------------------------------
Output:

Name: Time
 Age: 19
 Sex: M
 GPA after upgrade: 2.20
-------------------------------------------
Output:

Name: Jane
 Age: 19
 Sex: F
 GPA after upgrade: 2.40
