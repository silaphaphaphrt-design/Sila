#include <stdio.h>

struct student {
    char name[20];
    int age;
    char sex;
    float gpa;
};


struct student aboy;


void upgrade(struct student child);

int main() {
    
    scanf("%s %d %c %f", aboy.name, &aboy.age, &aboy.sex, &aboy.gpa);

    
    upgrade(aboy);

    printf("Name: %s\n ",aboy.name);
    printf("Age: %d\n ",aboy.age);
    printf("Sex: %c\n ",aboy.sex);
    printf("GPA after upgrade: %.2f\n", aboy.gpa);

    return 0;
}

void upgrade(struct student child) {
   
    if (aboy.sex == 'M' || aboy.sex == 'm') {
        aboy.gpa = aboy.gpa * 1.10; 
    } 
    else if (aboy.sex == 'F' || aboy.sex == 'f') {
        aboy.gpa = aboy.gpa * 1.20; 
    }
}
Output:

Name: Time
 Age: 19
 Sex: M
 GPA after upgrade: 2.20
-------------------------------------------
Output:

Name: Jane
 Age: 19
 Sex: F
 GPA after upgrade: 2.40
