#include <stdio.h>
#define MONTHS 3

void analyze_profit(int *rev, int *exp, int *status, int *net);
void input_data(int arr[], int size, const char *label);
void print_total(int arr[], int size, const char *label);

int main()
{
    int revenue[MONTHS];
    int expense[MONTHS];
    int net_profit = 0;
    int status = 0;

    input_data(revenue, MONTHS, "REVENUE");
    input_data(expense, MONTHS, "EXPENSE");

    analyze_profit(revenue, expense, &status, &net_profit);

    printf("\n--- 3 MONTH FINANCIAL ANALYSIS REPORT ---\n");
    print_total(revenue, MONTHS, "REVENUE");
    print_total(expense, MONTHS, "EXPENSE");

    printf("\nNET PROFIT: %d\n", net_profit);
    printf("BUSINESS STATUS: ");
    if (status == 1)
        printf("PROJECT IS PROFITABLE");
    else
        printf("PROJECT IS UNPROFITABLE");

    return 0;
}

void input_data(int arr[], int size, const char *label)
{
    printf("\nEnter %d months of %s values:\n", size, label);
    for (int i = 0; i < size; i++) {
        printf("Month %d %s: ", i + 1, label);
        scanf("%d", &arr[i]);
        printf("%d\n", arr[i]);
    }
}

void print_total(int arr[], int size, const char *label)
{
    int sum = 0;
    for (int i = 0; i < size; i++)
        sum += arr[i];

    printf("TOTAL %s: %d\n", label, sum);
}

void analyze_profit(int *rev, int *exp, int *status, int *net)
{
    for (int i = 0; i < MONTHS; i++)
        *net += rev[i] - exp[i];

    if (*net >= 0)
        *status = 1;
}
