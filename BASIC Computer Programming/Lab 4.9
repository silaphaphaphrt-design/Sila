#include <stdio.h>

int main() {
  int gross_salary;
  float tax_rate = 0.0;
  float tax_amount = 0.0;
  float net_salaty = 0.0;
  
  printf("Enter Gross Salary (THB/mounth, intrger): ");
  scanf("%d", &gross_salary);
  
  if (gross_salary < 20000) {
        tax_rate = 0.0;
    } else if (gross_salary >= 20000 && gross_salary < 50000) {
        tax_rate = 0.05;
    } else {
        tax_rate = 0.1;
    }
    tax_amount = gross_salary * tax_rate;
    net_salaty = (float)gross_salary - tax_amount;
    
    printf("\n--- SALARY CALCULATION REPORT ---\n");
    printf("Gross Salary: %d THB\n", gross_salary);
    printf("Tax Rate Applied: %.0f%%\n", tax_rate * 100);
    printf("Tax Amount Deducted: %.2f THB\n", tax_amount);
    printf("Net Salary: %.2f THB\n", net_salaty);

    return 0;
}
