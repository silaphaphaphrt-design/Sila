#include <stdio.h>

struct Transaction {
  char description[50];
  float amont;
};

int main() {
  int N, i;
  float totalIncome = 0.0;
  float totalExpense = 0.0;
  float netbalance = 0.0;
  
  if (scanf("%d", &N) != 1) {
    return 0;
  }

  struct Transaction transactions[N];

  for (i = 0; i < N; i++) {
    if (scanf("%f %s", &transactions[i].amont, 
                        transactions[i].description) != 2) {
                          return 1;
                        }

    if (transactions[i].amont >= 0.0) {
      totalIncome += transactions[i].amont;
    } else {
      totalExpense += -transactions[i].amont;
    }
  }

  netbalance = totalIncome - totalExpense;
  
  printf("Total Income: %.2f\n", totalIncome);
  printf("Total Expense: %.2f\n", totalExpense);
  printf("Net Balance: %.2f\n", netbalance);

  return 0;
}
