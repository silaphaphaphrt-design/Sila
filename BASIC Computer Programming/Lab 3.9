#include <stdio.h>

int main() {
  int N_DAYS, day;
  float initialBudget;
  float remainingBudged;
  float dailyspend;
  
  if (scanf("%f %d", &initialBudget, &N_DAYS) != 2) {
    return 1;
  }
  remainingBudged = initialBudget;
  
  printf("Day | Spend | Remaining\n");
  printf("-----------------------------\n");
  
  for (day = 1; day <= N_DAYS; day++) {
    dailyspend = 0.0;
    
    if (remainingBudged >= 500.00) {
      dailyspend = 100.00;
    } else if (remainingBudged >= 100.00) {
      dailyspend = 50.00;
    }  else if (remainingBudged > 0.0) {
      dailyspend = 20.00;
    } else {
      dailyspend = 0.0;
    }
    
    if (dailyspend > remainingBudged){
      dailyspend = remainingBudged;
    }
    remainingBudged -= dailyspend;
    printf("%d | %.2f | %.2f\n", day, dailyspend, remainingBudged);
  }
  printf("-----------------------------\n");
  printf("Final Budget: %.2f\n", remainingBudged);
  return 0;
}
