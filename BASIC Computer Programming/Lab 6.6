#include <stdio.h>

#define SIZE 5

void calcBalance(int *arr, int *bal, int *stat);

int main()
{
    int trans[SIZE];
    int balance, status;
    int i;

    for(i = 0; i < SIZE; i++)
        scanf("%d", &trans[i]);

    calcBalance(trans, &balance, &status);

    printf("\n--- PERSONAL FINANCE REPORT ---\n");
    printf("Transactions Recorded: ");
    for(i = 0; i < SIZE; i++)
        printf("%d ", trans[i]);

    printf("\nNet Balance: %d\n", balance);
    printf("Status: %s", status ? "PROFIT" : "LOSS");

    return 0;
}

void calcBalance(int *arr, int *bal, int *stat)
{
    for(int i = 0; i < SIZE; i++)
        *bal += arr[i];

    *stat = (*bal >= 0);
}
