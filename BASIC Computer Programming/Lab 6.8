#include <stdio.h>
#define SIZE 5

void updateValue(int *arr, int *target, int *replace, int *flag);
void showArray(int arr[], int size);

int main()
{
    int data[SIZE];
    int target, replace;
    int status = 0;

    printf("Enter %d integer elements:\n", SIZE);
    for(int i = 0; i < SIZE; i++){
        printf("Element %d: \n", i + 1);
        scanf("%d", &data[i]);
    }

    printf("\nSearch Value: ");
    scanf("%d", &target);
    printf("New Value: ");
    scanf("%d", &replace);

    printf("\n--- ARRAY UPDATE REPORT ---\n");
    printf("Array BEFORE Update: ");
    showArray(data, SIZE);

    updateValue(data, &target, &replace, &status);

    printf("Array AFTER Update: ");
    showArray(data, SIZE);

    printf("Status: ");
    if(status)
        printf("Update SUCCESSFUL.");
    else
        printf("Update FAILED (Value not found).");

    return 0;
}

void showArray(int arr[], int size)
{
    for(int i = 0; i < size; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

void updateValue(int *arr, int *target, int *replace, int *flag)
{
    for(int i = 0; i < SIZE; i++){
        if(arr[i] == *target){
            arr[i] = *replace;
            *flag = 1;
        }
    }
}
