#include <stdio.h>
#define DAYS 7

int main() {
    int daily_temp[DAYS];
    int max_temp;
    int i;

    for (i = 0; i < DAYS; i++) {
        scanf("%d", & daily_temp[i]);

        if (i == 0 ||  daily_temp[i] > max_temp) {
            max_temp =  daily_temp[i];
        }
    }

    printf("--- TEMPERATURE SUMMARY ---\n");
    printf("Record Temperature (C): ");

    for (i = 0; i < DAYS; i++) {
        printf("%d ",  daily_temp[i]);
    }

    printf("\nMaximum Temperature: %d C\n", max_temp);

    if (max_temp >= 35) {
        printf("Weather is HOT!\n");
    } else {
        printf("Weather is MODERATE.\n");
    }

    return 0;
}
