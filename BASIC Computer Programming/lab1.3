#include <stdio.h>

int main() {
    
    int num1, num2, operationCode; 
    float result;

    
    if (scanf("%d %d %d", &num1, &num2, &operationCode) != 3) {
        return 1;
    }
    printf("Input Numbers: %d and %d\n", num1, num2);
    printf("Operation Code: %d\n", operationCode);
    printf("Result: ");
   
    if (operationCode == 1) {
        result = num1 + num2;
        printf("%.2f\n", result);
    } 
    
    else if (operationCode == 2) {
        result = num1 - num2;
        printf("%.2f\n", result);
    } 
   
    else if (operationCode == 3) {
        result = num1 * num2;
        printf("%.2f\n", result);
    } 
   
    else if (operationCode == 4) {
       
        if (num2 != 0) {
            result = (float)num1 / num2; 
            printf("%.2f\n", result);
        } else {
            printf("Error: Division by zero\n");
        }
    } 
    
    else {
        printf("Invalid Operation\n");
    }
    
   
    return 0;
 }
