#include <stdio.h>

struct Student {
    int id;
    int score;
    char grade;
};

void calc_grade(struct Student *st);

void show_menu() {
    printf("\n--- STUDENT RECORD MENU ---\n");
    printf("1. Input / Update Data\n");
    printf("2. View Report\n");
    printf("3. Exit\n");
    printf("Enter choice: ");
}

int main() {
    struct Student st = {0, 0, 'U'};
    int choice = 0;

    while (choice != 3) {
        show_menu();
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter Student ID: ");
                scanf("%d", &st.id);
                printf("Enter Score (0-100): ");
                scanf("%d", &st.score);

                calc_grade(&st);
                printf("Data updated.\n");
                break;

            case 2:
                if (st.id == 0) {
                    printf("No student data available.\n");
                } else {
                    printf("\n--- STUDENT REPORT ---\n");
                    printf("ID: %d\n", st.id);
                    printf("Score: %d\n", st.score);
                    printf("Grade: %c\n", st.grade);
                }
                break;

            case 3:
                printf("Exiting program. Goodbye!\n");
                break;

            default:
                printf("Invalid choice.\n");
        }
    }
    return 0;
}

void calc_grade(struct Student *st) {
    if (st->score >= 80) st->grade = 'A';
    else if (st->score >= 70) st->grade = 'B';
    else if (st->score >= 60) st->grade = 'C';
    else if (st->score >= 50) st->grade = 'D';
    else st->grade = 'F';
}
