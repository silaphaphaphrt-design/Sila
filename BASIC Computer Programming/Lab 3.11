#include <stdio.h>

int main() {
    int choice;
    float totalCost = 0.0;
    float paidAmount, change;

    while (1) {
        printf("\n--- Vending Machine ---\n");
        printf("1. Coke  (15.00)\n2. Water (10.00)\n3. Snack (25.00)\n4. Check out\n");
        printf("Current Total: %.2f\n", totalCost);
        printf("Select item: ");

        if (scanf("%d", &choice) != 1) break;
        if (choice == 4) break;

        switch (choice) {
            case 1: totalCost += 15.00; break;
            case 2: totalCost += 10.00; break;
            case 3: totalCost += 25.00; break;
            default: printf("Invalid choice!\n");
        }
    }

    if (totalCost <= 0) {
        printf("\nNo items selected. Goodbye!\n");
        return 0;
    }

    printf("\nTotal due: %.2f\n", totalCost);
    printf("Enter paid amount: ");
    
    if (scanf("%f", &paidAmount) == 1) {
        if (paidAmount >= totalCost) {
            change = paidAmount - totalCost;
            printf("---------------------------\n");
            printf("Success! Change: %.2f\n", change);
        } else {
            printf("Error: Insufficient funds.\n");
        }
    }

    return 0;
}
