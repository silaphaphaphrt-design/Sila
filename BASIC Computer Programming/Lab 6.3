    for(i = 0; i < N; i++)
        scanf("%d", &arr[i]);

    p = arr;

    printf("\n--- ARRAY AND POINTER REPORT ---\n");
    printf("Idx | Direct | Pointer | Address\n");
    printf("--------------------------------\n");

    for(i = 0; i < N; i++)
        printf("%3d | %6d | %7d | %p\n",
               i, arr[i], p[i], &p[i]);

    return 0;
}
