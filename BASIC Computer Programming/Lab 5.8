#include <stdio.h>

struct Student {
    int id;
    int math;
    int sci;
    int eng;
    int total;
};

void calcGrade(int total);
void calcAvg(int total, float *avg);

int main()
{
    struct Student st;
    float avg = 0.0;

    scanf("%d", &st.id);
    scanf("%d", &st.math);
    scanf("%d", &st.sci);
    scanf("%d", &st.eng);

    st.total = st.math + st.sci + st.eng;
    calcAvg(st.total, &avg);

    printf("\n--- STUDENT ACADEMIC REPORT ---\n");
    printf("Student ID: %d\n", st.id);
    printf("Scores: Math %d, Science %d, English %d\n",
           st.math, st.sci, st.eng);
    printf("Total Score: %d\n", st.total);
    printf("Average Score: %.2f\n", avg);

    calcGrade(st.total);

    return 0;
}

void calcGrade(int total)
{
    if(total >= 250)
        printf("Grade A");
    else if(total >= 200)
        printf("Grade B");
    else
        printf("Grade C");
}

void calcAvg(int total, float *avg)
{
    *avg = total / 3.0;
}
