void addValue(int *num);

int main()
{
    int x;

    scanf("%d", &x);

    printf("\n--- POINTER MODIFICATION REPORT ---\n");
    printf("1. Value BEFORE function call: %d\n", x);

    addValue(&x);

    printf("2. Value AFTER function call: %d\n", x);

    return 0;
}

void addValue(int *num)
{
    *num += 10;
}
