#include <stdio.h>

#define N 4

struct Employee {
    int id;
    int salary;
};

void findMinMax(struct Employee emp[], int n, int *mx, int *mn);

int main()
{
    struct Employee data[N];
    int maxS, minS;
    int i;

    for(i = 0; i < N; i++)
    {
        scanf("%d", &data[i].id);
        scanf("%d", &data[i].salary);
    }

    findMinMax(data, N, &maxS, &minS);

    printf("\n--- EMPLOYEE SALARY SUMMARY ---\n");
    printf("ID     | Salary\n");
    printf("-------|---------\n");

    for(i = 0; i < N; i++)
        printf("%-6d | %d\n", data[i].id, data[i].salary);

    printf("\nMaximum Salary Found: %d\n", maxS);
    printf("Minimum Salary Found: %d\n", minS);

    return 0;
}

void findMinMax(struct Employee emp[], int n, int *mx, int *mn)
{
    int i;

    *mx = emp[0].salary;
    *mn = emp[0].salary;

    for(i = 1; i < n; i++)
    {
        if(emp[i].salary > *mx)
            *mx = emp[i].salary;

        if(emp[i].salary < *mn)
            *mn = emp[i].salary;
    }
}
