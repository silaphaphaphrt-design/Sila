#include <stdio.h>

int main() {
    int N;
    int sum = 0;
    int i; 
    
    if (scanf("%d", &N) != 1 || N < 0) {
        
        printf("Invalid  Number.\n");
        return 1; 
    }

    for (i = 1; i <= N; i++) {
        sum = sum + i;
    }

    printf("Enter number is : %d \n ");
    printf("Sum  %d is: %d", N, sum);

    return 0; 
}
