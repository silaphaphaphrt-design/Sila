#include <stdio.h>

void calcOdds(int *outs, float *odds, int *flag);

int main()
{
    int outs = 10;
    float chance;
    int status;

    calcOdds(&outs, &chance, &status);

    printf("\n--- POKER PROBABILITY REPORT (2 Cards Remaining) ---\n");
    printf("Calculated Outs: %d\n", outs);
    printf("Win Probability (Odds x 4): %.2f%%\n", chance);

    printf("Assessment: ");
    if(status)
        printf("HIGH Win Probalility");
    else
        printf("LOW Win Probalility");

    return 0;
}

void calcOdds(int *outs, float *odds, int *flag)
{
    *odds = (*outs) * 4;

    if(*odds >= 30.0)
        *flag = 1;
    else
        *flag = 0;
}
