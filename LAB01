#include <stdio.h>

void Loop(int *number);

int main(){
    int n;

    printf("Type number you want: ");
    scanf("%d",&n);

    Loop(&n);
    return 0;
}

void Loop(int *number){
    
    for(int i = 0 ; i < *number ; i++){
        printf("[%d] Hello world\n",i);
    }
    
}
-----------------------------------------------------------------------------
Type number you want: 5
[0] Hello world
[1] Hello world
[2] Hello world
[3] Hello world
[4] Hello world
