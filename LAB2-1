#include <stdio.h>
#include <string.h>

void reverse(char str1[], char str2[], char str3[], char str4[]) {
    int len1 = strlen(str1);
    for (int i = 0; i < len1; i++) {
        str2[i] = str1[len1 - 1 - i];
    }
    str2[len1] = '\0'; 
    printf("Reversed string 1: %s\n", str2);
    
    int len2 = strlen(str3);
    for (int i = 0; i < len2; i++) {
        str4[i] = str3[len2 - 1 - i];
    }
    str4[len2] = '\0'; 
    printf("Reversed string 2: %s\n", str4);
}

int main() {
    char text1[50] = "I Love You";
    char out1[50];
    char text2[50] = "Hello World";
    char out2[50];
    reverse(text1, out1, text2, out2);
    return 0;
}
-----------------------------------------------
Output:

Reversed string 1: uoY evoL I
Reversed string 2: dlroW olleH
