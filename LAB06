#include <stdio.h>

void GetMatrix(int **arrdata, int *row, int *col, int *size);

int main()
{
    int *data, m, n, s;

    GetMatrix(&data, &m, &n, &s);

    return 0;
}

void GetMatrix(int **arrdata, int *row, int *col, int *size)
{

    printf("Plsese Enter number for row and col : ");
    scanf("%d%d", row, col);

    *size = (*row) * (*col);
    *arrdata = new int[*size];

    for (int i = 0; i < *size; i++)
    {
        printf("[%d] ", i + 1);
        scanf("%d", &(*arrdata)[i]);
    }
}
---------------------------------------
Plsese Enter number for row and col : 2 2
[1] 2
[2] 3
[3] 4
[4] 5
